{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "helltime",
  "version": "0.1.0",
  "identifier": "com.helltime.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "helltime",
        "width": 380,
        "height": 720,
        "resizable": true,
        "skipTaskbar": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico"]
  }
}
